
@import 'animate.css'
hack = ''

@-ms-viewport
   width device-width


*, *:before, *:after
   box-sizing inherit
   -moz-box-sizing inherit
   -webkit-box-sizing inherit
html, body
  height 100%
  padding 0
  font-family "Open Sans", sans-serif
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
html
  background linear-gradient(rgba(0, 0, 0, 0.5),rgba(0, 0, 0, 0.5)), url('/img/Untitled.png') no-repeat
  -webkit-background-size cover
  -moz-background-size cover
  -o-background-size cover
  background-size cover
  background-color #007fcb
  margin -5px

a
  text-decoration none
.wrapper
  margin-left 120px
  margin-right 120px
.container
  width 100%
  padding 0
  text-align center
  height 1820px
  overflow hidden
header
  margin-top 15px
header a
  color white
  font-size 14px
.logo-text
  display inline-block
  width 220px
  vertical-align top
  margin-left 10px
.logo-subtitle
  font-size 12px
  display block
  margin-top -9px
.logo-title
  font-size 25px
  font-weight 700
  display block
  margin-top 12px
  letter-spacing -0.4px
.top-menu
  list-style none
  position relative
  margin 0
  padding-left 0
  display flex
  justify-content space-between
.top-menu li
  float left
.top-menu li:first-child
  padding-right 30px
.top-menu li:not(:first-child)
  margin-top: 10px
.top-menu li:not(:first-child) a
  padding 10px
  display block
.top-menu li:last-child a
  border 1px solid #00c0ff
  border-radius 3px
.container
  min-height 100%

.main-title, .main-subtitle
  color white
.main-title
  font-size 3em
  font-weight 700
  margin-top 120px
  margin-bottom 0
.main-subtitle
  font-size 2.5em
  font-weight 300
.reg_main-button section
  float: left
  color white
  position: relative;
  top: 50%;
  transform: translateY(-50%);
.reg_main-button
  border 3px solid #5bc626;
  width 50%
  margin auto
  height 190px
  margin-top 80px
.reg
  width 40%
  margin-left -55px
  background-color #003F65
  padding 20px 0
.reg span:first-child
  font-size 1.5em
.reg span:last-child
  font-size 1em
  letter-spacing 2px
.por-num
  font-size 2.25em
.arrow-down
  margin-top 40px

.main-button
  width 63%
  padding-left 20px
.main-button span
  position relative
  padding 20px
  font-size 18px
  font-weight 700
  color white
  text-align center
  text-shadow 0 1px 2px rgba(0, 0, 0, 0.25)
  background #5bc626
  border: 0
  cursor: pointer
  -webkit-box-shadow 7px 7px 0px 0px rgba(52,134,11,1)
  -moz-box-shadow 7px 7px 0px 0px rgba(52,134,11,1)
  box-shadow 7px 7px 0px 0px rgba(52,134,11,1)
  border-radius 3px
.main-button span:active
  top: 1px;
  outline: none;
  -webkit-box-shadow: none;
  box-shadow: none;
.main-button img
  vertical-align:middle
  padding-left 10px
  padding-bottom 5px

footer, .push
  height 280px
footer
  background white
.footer-top
  height 200px
  background-color #f1f1f1
  text-align center

.footer-top h4
  color #9e9e9e
  text-align center
  font-size 14px
  padding 30px
  letter-spacing 3px
.row-of-supporters
  display flex
  justify-content space-between


@media only screen and (min-width: 1250px) and (max-width: 1395px)
  .wrapper
    margin-left 50px
    margin-right 50px

@media only screen and (max-width: 1250px)
  .wrapper
    margin-left 10px
    margin-right 10px

@import '_content'
@import '_info'
